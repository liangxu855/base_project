<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //=============================FlatButton=================================================
    <style name="mainKongFlatButton">
        <item name="colorNormal">@color/translucent</item>
        <item name="colorNormalText">@color/main_color</item>
        <item name="colorPressed">@color/gray</item>
        <item name="colorPressedText">@color/gray_text</item>
        <item name="cornerRadius">@dimen/dp_6</item>
        <item name="strokeColor">@color/main_color</item>
        <item name="strokeWidth">@dimen/dp_1</item>
    </style>


    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/popupwindow_animation_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_animation_out</item>
    </style>

    <!--errorDialogFragment-->
    <style name="NormalDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="DialogFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- dialog的动画 -->
    <style name="main_menu_animstyle">
        <!-- windowEnterAnimation 进入的动画 -->
        <!--  代码里面 -->
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
</resources>
